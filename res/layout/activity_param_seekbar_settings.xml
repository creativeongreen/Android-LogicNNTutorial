<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/abc_action_bar_default_padding_material"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/tv_seekbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/abc_action_bar_default_padding_material"
        android:text="@string/param_title_max_epoch" />

    <SeekBar
        android:id="@+id/sb_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/abc_action_bar_default_padding_material"
        android:layout_below="@+id/tv_seekbar_title" />

</RelativeLayout>